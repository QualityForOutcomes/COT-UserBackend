{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": [ "ES2020" ],
    "allowJs": true,
    "skipLibCheck": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "api/**/*",
    "services/**/*",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vercel"
  ]
}