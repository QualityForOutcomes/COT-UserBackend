{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [ "ES2020" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [ "api/**/*", "utils/**/*", "entities/**/*" ],
  "exclude": [ "node_modules" ]
}